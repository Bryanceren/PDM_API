                <input type="password" class="form-control" id="pass" placeholder="Password" required>
              </div> -->
            </form>
           
            
            </div>
      </section>

      <section>
          <table class="table table-striped table-hover table-bordered w-100 text-center align-middle mt-4" id="table-browser">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Imagen</th>
                  <th scope="col">Precio</th>
                  <th scope="col">descripcion</th>
                </tr>
              </thead>
              <tbody>

              </tbody>
      </section>
    </div>

